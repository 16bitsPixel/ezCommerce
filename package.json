{
  "name": "ezcommerce",
  "version": "1.0.0",
  "description": "commerce app similar to amazon",
  "author": "",
  "license": "UNLICENSED",
  "repository": "none",
  "scripts": {
    "docker": "npm run docker-accounts && npm run docker-products",
    "docker-accounts": "cd AccountService && docker-compose up -d", 
    "docker-products": "cd ProductService && docker-compose up -d",
    "installs": "npm install && npm run install-accounts && npm run install-products && npm run install-webapp && npm run install-adminapp",
    "install-adminapp": "cd AdminApp && npm install",
    "install-accounts": "cd AccountService && npm install",
    "install-products": "cd ProductService && npm install",
    "install-webapp": "cd WebApp && npm install",
    "dev": "concurrently --kill-others \"npm run accounts\" \"npm run products\" \"npm run webapp\" \"npm run adminapp\"",
    "accounts": "cd AccountService && npm run dev",
    "products": "cd ProductService && npm run dev",
    "adminapp": "cd AdminApp && npm run dev",
    "webapp": "cd WebApp && npm run dev"
  },
  "devDependencies": {
    "concurrently": "*"
  }
}
